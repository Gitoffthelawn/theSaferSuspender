{
  "manifest_version": 2,

  "minimum_chrome_version": "79.0",

  "author": "valord577",

  "name": "The Safer Suspender",
  "description": "Release browser resources by suspending the tabs you aren't using",
  "version": "1.4",
  "icons": {
    "128": "icons/ic_suspender_707070_128x128.png"
  },
  "homepage_url": "https://github.com/valord577/theSaferSuspender",

  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
      "scripts": [
        "utils/utils.js",
        "backstage/task.js"
      ]
  },

  "web_accessible_resources": ["suspended.html"],

  "browser_action": {
    "default_icon": {
      "128": "icons/ic_suspender_707070_128x128.png"
    },
    "default_title": "The Safer Suspender",
    "default_popup": "popup.html"
  }

}
