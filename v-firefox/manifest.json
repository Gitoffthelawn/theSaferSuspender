{
  "manifest_version": 2,

  "browser_specific_settings": {
    "gecko": {
      "id": "valord577@gmail.com",
      "strict_min_version": "79.0"
    }
  },

  "author": "valord577",

  "name": "The Safer Suspender",
  "description": "Release browser resources by suspending the tabs you aren't using",
  "version": "1.7",
  "icons": {
    "128": "icons/ic_suspender_707070_128x128.svg"
  },
  "homepage_url": "https://github.com/valord577/theSaferSuspender",

  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
      "scripts": [
        "backstage/task.js"
      ]
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "128": "icons/ic_suspender_707070_128x128.svg"
    },
    "default_title": "The Safer Suspender",
    "default_popup": "popup.html"
  }
}
